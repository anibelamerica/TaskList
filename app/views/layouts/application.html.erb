<!DOCTYPE html>
<html>
  <head>
    <title>TaskList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <section class="title">
      <h1>Task List</h1>
    </section>

    <header>
      <ul>
        <li>
          <%= link_to "Add Task", new_task_path %>
        </li>
        <li>
          <%= link_to "All Task", tasks_path %>
        </li>
      </ul>
    </header>

    <%= yield %>

    <footer>
      <h4>&copy; 2018</h4>
    </footer>

  </body>
</html>
