<h2>Add a New Task</h2>

<%= form_with model: @task do |f| %>

<%= f.label :action %>
<%= f.text_field :action %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :completion_date %>
<%= f.text_field :completion_date, placeholder: "Due date" %>


<%= f.submit "Save Task", class: "task-button" %>
<% end %>
